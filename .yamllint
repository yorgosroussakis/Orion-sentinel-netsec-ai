# yamllint configuration for Orion Sentinel
extends: default

rules:
  line-length:
    max: 120
    level: warning
  comments:
    min-spaces-from-content: 1
  indentation:
    spaces: 2
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
  document-start:
    level: warning
  brackets:
    max-spaces-inside: 1
  comments-indentation:
    level: warning

ignore: |
  venv/
  .git/
  __pycache__/
  *.pyc
  .pytest_cache/
  node_modules/
