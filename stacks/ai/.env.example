# Loki URL (internal Docker network)
LOKI_URL=http://loki:3100

# Pi-hole API configuration (on Pi #1)
# TODO: Replace with your Pi #1's IP address and API token
PIHOLE_API_URL=http://192.168.1.10/admin/api.php
PIHOLE_API_TOKEN=your-pihole-api-token-here

# Model paths (inside container, mounted from ./models/)
DEVICE_ANOMALY_MODEL=/models/device_anomaly.onnx
DOMAIN_RISK_MODEL=/models/domain_risk.onnx

# Detection thresholds (0.0 - 1.0)
DEVICE_ANOMALY_THRESHOLD=0.7
DOMAIN_RISK_THRESHOLD=0.85

# Time windows (minutes)
DEVICE_WINDOW_MINUTES=10
DOMAIN_WINDOW_MINUTES=60

# Batch processing interval (minutes)
BATCH_INTERVAL=10

# Enable/disable automatic domain blocking
# Set to false for testing, true for production enforcement
ENABLE_BLOCKING=false

# Real-time streaming mode (vs batch processing)
# Set to true for sub-second latency, false for periodic batch
STREAMING_MODE=false

# Threat Intelligence Configuration
THREAT_INTEL_ENABLE=true
# AlienVault OTX API key (optional, but recommended for higher rate limits)
# Get one free at: https://otx.alienvault.com/
THREAT_INTEL_OTX_API_KEY=
# How often to refresh threat feeds (hours)
THREAT_INTEL_REFRESH_HOURS=6
# Score boost when IOC match found (0.0 - 1.0)
THREAT_INTEL_IOC_SCORE_BOOST=0.3

# HTTP API port (optional)
AI_API_PORT=8080

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
